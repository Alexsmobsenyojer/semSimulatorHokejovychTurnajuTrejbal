<Window x:Class="semSimulatorHokejovychTurnajuTrejbal.CreatePlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semSimulatorHokejovychTurnajuTrejbal"
        mc:Ignorable="d"
        Title="CreatePlayerWindow" Height="700" Width="450"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nový hráč" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <Label Content="Jméno a příjmení"/>
            <TextBox Text="{Binding FullName}" Margin="0,5"/>
            <Label Content="Číslo dresu"/>
            <TextBox Text="{Binding Number}" Margin="0,5"/>

            <ComboBox ItemsSource="{Binding Positions}" SelectedItem="{Binding Position}" Margin="0,10"/>

            <StackPanel IsEnabled="{Binding IsSkater}">
                <ComboBox ItemsSource="{Binding AvailableRoles}" SelectedItem="{Binding Role}" Margin="0,10"/>
                <Label Content="Střelba (0-99)"/>
                <TextBox Text="{Binding Shooting}" Margin="0,5"/>
                <Label Content="Přihrávky (0-99)"/>
                <TextBox Text="{Binding Passing}" Margin="0,5"/>
                <Label Content="Obrana (0-99)"/>
                <TextBox Text="{Binding Defending}" Margin="0,5"/>
                <Label Content="Bruslení (0-99)"/>
                <TextBox Text="{Binding Skating}" Margin="0,5"/>
            </StackPanel>
            <Label Content="Celkové hodnocení (0-99)"/>
            <TextBox Text="{Binding Overall}" Margin="0,10"/>
            <Label Content="Tým"/>
            <ComboBox ItemsSource="{Binding AllTeams}" SelectedItem="{Binding SelectedTeam}" DisplayMemberPath="Name" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Uložit" Command="{Binding SaveCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Zrušit" Command="{Binding CancelCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
